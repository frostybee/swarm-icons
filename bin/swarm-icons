#!/usr/bin/env php
<?php

declare(strict_types=1);

// Find autoloader
$autoloadPaths = [
    __DIR__ . '/../vendor/autoload.php',
    __DIR__ . '/../../../autoload.php',
];

$autoloaded = false;
foreach ($autoloadPaths as $autoloadPath) {
    if (file_exists($autoloadPath)) {
        require $autoloadPath;
        $autoloaded = true;
        break;
    }
}

if (!$autoloaded) {
    fwrite(STDERR, 'Autoload file not found. Please run: composer install' . PHP_EOL);
    exit(1);
}

use Frostybee\SwarmIcons\Command\CacheClearCommand;
use Symfony\Component\Console\Application;

$application = new Application('SwarmIcons CLI', '1.0.0');

// Register commands
$application->add(new CacheClearCommand());

$application->run();
